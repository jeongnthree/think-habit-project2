{
  "name": "think-habit-workspace",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "think-habit-journal-app",
    "think-habit-group-widget",
    "think-habit-lite",
    "shared/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "analyze": "cross-env ANALYZE=true next build",
    "docker:build": "docker build -t think-habit-lite .",
    "docker:run": "docker run -p 3000:3000 think-habit-lite",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "prepare": "husky install",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "audit:security": "npm audit --audit-level high",
    "clean": "rm -rf .next out dist",
    "postbuild": "next-sitemap",
    "dev:electron": "npm run dev --workspace=think-habit-journal-app",
    "dev:widget": "npm run dev --workspace=think-habit-group-widget",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:electron\"",
    "build:electron": "npm run build --workspace=think-habit-journal-app",
    "build:widget": "npm run build --workspace=think-habit-group-widget",
    "build:all": "npm run build && npm run build --workspaces --if-present",
    "clean:all": "npm run clean && npm run clean --workspaces --if-present",
    "lint:all": "npm run lint --workspaces --if-present",
    "test:all": "npm run test --workspaces --if-present",
    "sync:check": "node sync-check.js",
    "sync:before-switch": "npm run sync:check && git add . && git status",
    "sync:after-switch": "npm run sync:check",
    "sync:local": "git add . && git commit -m \"sync: 로컬 작업 저장\" || echo \"변경사항 없음\"",
    "build:app": "node scripts/build-and-deploy.js",
    "fix:build": "node scripts/fix-nextjs-build.js",
    "health:check": "node scripts/dev-server-health-check.js",
    "dev:clean": "npm run clean && npm run dev",
    "dev:fresh": "rm -rf .next node_modules && npm install && npm run dev"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.56.0",
    "@radix-ui/react-tabs": "^1.1.12",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.52.1",
    "clsx": "^2.1.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.60.0",
    "recharts": "^3.1.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.40.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "28.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11",
    "typescript": "^5"
  }
}
